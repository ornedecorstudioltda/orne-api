default async function handler(req, res) {
    // Headers CORS primeiro
    res.setHeader('Access-Control-Allow-Origin', '*');
    res.setHeader('Access-Control-Allow-Methods', 'GET, POST, OPTIONS');
    res.setHeader('Access-Control-Allow-Headers', 'Content-Type, Authorization');
    
    if (req.method === 'OPTIONS') {
        return res.status(200).end();
    }
    
    const SHOPIFY_TOKEN = process.env.SHOPIFY_ACCESS_TOKEN;
    const SHOP_DOMAIN = 'orne-decor-studio.myshopify.com';
    
    try {
        // URL correta da API Admin
        const apiUrl = `https://${SHOP_DOMAIN}/admin/api/2024-01/orders.json?status=any&limit=1000`;
        
        console.log('Buscando pedidos...');
        
        const response = await fetch(apiUrl, {
            method: 'GET',
            headers: {
                'X-Shopify-Access-Token': SHOPIFY_TOKEN,
                'Content-Type': 'application/json'
            }
        });
        
        if (!response.ok) {
            const errorText = await response.text();
            console.error('Erro Shopify:', response.status, errorText);
            
            // Se erro 401, token inválido
            if (response.status === 401) {
                return res.status(401).json({ 
                    error: 'Token inválido ou expirado',
                    message: 'Verifique o token da Shopify'
                });
            }
            
            throw new Error(`Erro ${response.status}`);
        }
        
        const data = await response.json();
        
        // Log para debug
        console.log(`Retornando ${data.orders?.length || 0} pedidos`);
        
        return res.status(200).json(data);
        
    } catch (error) {
        console.error('Erro no proxy:', error);
        
        // Retornar dados de demo se falhar
        return res.status(200).json({
            orders: [],
            message: 'Usando dados de demonstração',
            error: error.message
        });
    }
}
